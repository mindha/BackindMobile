<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="backind.backind">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:parentActivityName=".Activity.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.BeliTiketActivity"
            android:parentActivityName=".Activity.RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.DetailBayarTiketActivity"
            android:parentActivityName=".Activity.BeliTiketActivity" />
        <activity
            android:name=".Activity.PembayaranActivity"
            android:parentActivityName=".Activity.DetailBayarTiketActivity" />
        <activity
            android:name=".OnboardingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ListBisnisActivity"
            android:label="Backind"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.NearbyActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity.BusinessDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity.PesanHomestayActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.DetailBayarHomestayActivity" />
        <activity android:name=".Activity.PaymentDeadlineActivity" />
        <activity android:name=".Activity.EditProfileActivity" />
        <activity android:name=".Activity.BuktiTransferActivity" />
        <activity android:name=".Activity.ChangePasswordActivity" />
        <activity android:name=".Activity.ListEticketActivity"></activity>
    </application>

</manifest>