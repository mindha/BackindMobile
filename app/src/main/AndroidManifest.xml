<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="backind.backind">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:parentActivityName=".Activity.LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.LoginActivity" />
        </activity>
        <activity
            android:name=".Activity.BeliTiketActivity"
            android:parentActivityName=".Activity.RegisterActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.RegisterActivity" />
        </activity>
        <activity
            android:name=".Activity.DetailBayarTiketActivity"
            android:parentActivityName=".Activity.BeliTiketActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.BeliTiketActivity" />
        </activity>
        <activity
            android:name=".Activity.PembayaranActivity"
            android:parentActivityName=".Activity.DetailBayarTiketActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.DetailBayarTiketActivity" />
        </activity>
        <activity
            android:name=".OnboardingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activity.ListBisnisActivity"
            android:label="@string/title_activity_list_bisnis"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.MenuActivity" />
        </activity>
        <activity
            android:name=".Activity.NearbyActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.ListBisnisActivity" />
        </activity>
        <activity
            android:name=".Activity.BusinessDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity.PesanHomestayActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.DetailBayarHomestayActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="backind.backind.Activity.PesanHomestayActivity" />
        </activity>
        <activity android:name=".Activity.PaymentDeadlineActivity"></activity>
    </application>

</manifest>