<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:padding="@dimen/margin20"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.HistoryFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="30dp"
        android:src="@drawable/history"
        android:layout_marginBottom="@dimen/margin20"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorHitam"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Let's Backpacking!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/padding10"
        android:layout_marginBottom="@dimen/padding10"
        android:fontFamily="@font/montserrat_regular"

        android:text="Ayo jalan-jalan bareng Backind!"/>
    <Button
        android:id="@+id/eticket"
        android:text="E-Ticket"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_style_purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>




</android.support.design.widget.CoordinatorLayout>