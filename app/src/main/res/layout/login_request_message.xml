<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:padding="@dimen/margin20"
            android:src="@drawable/bakpacker"/>
        <TextView
            android:padding="@dimen/margin20"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorHitam"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/notif_login"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/padding10"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/login"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:text="Login"
                android:layout_marginBottom="@dimen/padding5"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/btn_style_blue"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/register"
                    android:paddingLeft="@dimen/margin20"
                    android:paddingRight="@dimen/margin20"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:text="Register"
                    android:layout_marginBottom="@dimen/padding5"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/btn_style_purple"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>