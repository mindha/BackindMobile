<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingBottom="35dp"
    android:orientation="vertical"
    tools:context="Activity.RegisterActivity">


        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/backindMontserratBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="@string/daftarakun"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorHitam"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="@string/namalengkap"/>

            <EditText
                android:id="@+id/nama_lengkap"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableTint="@color/abuLight"
                android:inputType="text"
                android:drawablePadding="@dimen/padding10"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/email"/>

            <EditText
                android:id="@+id/email"
                android:drawablePadding="@dimen/padding10"
                android:drawableLeft="@drawable/ic_mail"
                android:drawableTint="@color/abuLight"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="@string/jeniskelamin"/>

            <Spinner
                android:id="@+id/jenis_kelamin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            </Spinner>

            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notelp"/>

            <EditText
                android:id="@+id/nohp"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="@dimen/padding10"
                android:drawableTint="@color/abuLight"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="@string/password"/>

            <EditText
                android:id="@+id/password"
                android:drawablePadding="@dimen/padding10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock"
                android:drawableTint="@color/abuLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin20"
                android:background="@drawable/btn_style_blue"
                android:text="@string/daftar_sekarang"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/sudahpunya"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/action_sign_in"
                    android:textAlignment="inherit"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

</ScrollView>
