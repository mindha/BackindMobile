<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dots_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin20"
            android:fontFamily="@font/montserrat_medium"
            android:text="Berikan Ulasan"
            android:textAlignment="center"
            android:textColor="@color/colorHitam"
            android:textSize="@dimen/margin20" />

        <RatingBar
            android:id="@+id/value_ratting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:stepSize="1" />
        <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:src="@drawable/ic_star"/>-->
        <EditText
            android:id="@+id/value_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis Review" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding5"
            android:layout_marginTop="@dimen/margin20"
            android:background="@drawable/btn_style_orange"
            android:fontFamily="@font/montserrat_medium"
            android:text="Review"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fab_margin" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>