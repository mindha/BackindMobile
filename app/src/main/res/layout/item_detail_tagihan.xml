<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailtagihan"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorHitam"
            android:textSize="@dimen/margin20"
            android:layout_marginTop="@dimen/margin20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tourism_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampung Gajah"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorHitam"
                android:textSize="16dp"
                android:layout_marginTop="@dimen/margin20"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tourism_price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 100.000,-"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorHitam"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/margin20"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/date_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selasa, 23 Januari 2018"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/padding10"/>

        <TextView
            android:id="@+id/number_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Tiket"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/padding10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/homestay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampung Gajah"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorHitam"
                android:textSize="16dp"
                android:layout_marginTop="@dimen/margin20"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/homestay_price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 100.000,-"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorHitam"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/margin20"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/date_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22 - 23 Januari 2018"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/padding10"/>

        <TextView
            android:id="@+id/number_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Orang"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="@dimen/padding10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Bayar"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorHitam"
                android:textSize="16dp"
                android:layout_marginTop="@dimen/margin20"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pay_code"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 156,-"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/colorHitam"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/margin20"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="@dimen/margin20"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorHitam">
        </ImageView>
        <TextView
            android:text="Total Harga"
            android:layout_marginTop="@dimen/padding10"
            android:layout_gravity="end"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/total_harga"
                android:text="Rp 200.156,-"
                android:layout_marginTop="@dimen/padding5"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHitam"
                android:textSize="20dp"
                android:layout_alignParentRight="true"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>