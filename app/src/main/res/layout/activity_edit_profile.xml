<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingBottom="35dp"
    android:orientation="vertical"
    tools:context="Activity.EditProfileActivity">


    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/backindMontserratBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="Edit Profile"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorHitam"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/photo"
            android:background="@color/abuLight"
            android:backgroundTint="@color/abuLight"
            android:layout_gravity="right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/padding10"/>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:text="@string/namalengkap"/>

        <EditText
            android:id="@+id/nama_lengkap"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawableTint="@color/abuLight"
            android:inputType="text"
            android:drawablePadding="@dimen/padding10"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/email"/>

        <EditText
            android:id="@+id/email"
            android:drawablePadding="@dimen/padding10"
            android:drawableLeft="@drawable/ic_mail"
            android:drawableTint="@color/abuLight"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:text="@string/jeniskelamin"/>

        <Spinner
            android:id="@+id/jenis_kelamin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        </Spinner>

        <TextView
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notelp"/>

        <EditText
            android:id="@+id/nohp"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="@dimen/padding10"
            android:drawableTint="@color/abuLight"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin20"
            android:background="@drawable/btn_style_blue"
            android:text="Update"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />


    </LinearLayout>

</ScrollView>
